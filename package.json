{
  "name": "@reactor/extension-core",
  "version": "2.0.0",
  "description": "Core extension for Launch. Provides default event, condition, and data element types available to all Launch users.",
  "author": {
    "name": "Adobe Systems",
    "url": "http://adobe.com",
    "email": "reactor@adobe.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Adobe-Marketing-Cloud/reactor-core-extension.git"
  },
  "scripts": {
    "build": "webpack --production",
    "build:analyze": "webpack --production --analyze",
    "test": "reactor-testrunner",
    "test:watch": "reactor-testrunner --no-single-run --no-coverage",
    "lint": "reactor-testrunner lint",
    "sandbox": "webpack --watch --run-sandbox",
    "package": "npm run build && reactor-packager",
    "bootstrap": "reactor-sandbox init",
    "ci-job": "npm test -- --ci && npm run lint && npm run package"
  },
  "dependencies": {
    "@coralui/react-coral": "^0.19.11",
    "@coralui/redux-form-react-coral": "<1.0.0",
    "@reactor/react-components": "^3.5.1",
    "classnames": "^2.2.5",
    "escape-string-regexp": "1.0.5",
    "history": "^4.4.0",
    "mitt": "^1.1.3",
    "moment-timezone": "^0.5.15",
    "postscribe": "^2.0.6",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.9",
    "reduce-reducers": "^0.1.5",
    "redux": "^3.6.0",
    "redux-actions": "^0.13.0",
    "redux-form": "7.3.0"
  },
  "devDependencies": {
    "@adobe/reactor-packager": "^2.6.2",
    "@adobe/reactor-sandbox": "^8.4.0",
    "@adobe/reactor-turbine": "^25.1.0",
    "@reactor/extension-support-testrunner": "^11.0.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "camelcase": "^4.1.0",
    "capitalize": "^1.0.0",
    "css-loader": "^0.26.0",
    "fs-extra": "^4.0.3",
    "html-webpack-plugin": "^2.24.1",
    "js-cookie": "^2.1.4",
    "json-loader": "^0.5.7",
    "nib": "^1.1.2",
    "react-addons-test-utils": "^15.3.2",
    "style-loader": "^0.13.1",
    "stylus-loader": "^2.3.1",
    "webpack": "^1.13.3",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-shell-plugin": "^0.4.3",
    "yargs": "^6.3.0"
  }
}
